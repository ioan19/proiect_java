<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="dronefleet.MapController" prefWidth="1100" prefHeight="750"
            stylesheets="@style.css"> <top>
        <HBox spacing="20" styleClass="card" alignment="CENTER_LEFT">
            <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
            
            <VBox>
                <Label text="Mission Control Center" styleClass="h1"/>
                <Label fx:id="statusLabel" text="Selectează o destinație pentru analiză..." styleClass="label-dim"/>
            </VBox>
            
            <Pane HBox.hgrow="ALWAYS"/>
            
            <VBox fx:id="weatherCard" spacing="5" style="-fx-background-color: #f4f7f6; -fx-padding: 10; -fx-background-radius: 5;" minWidth="150">
                <Label text="Condiții Meteo (Live)" style="-fx-font-weight:bold; -fx-font-size:10;"/>
                <Label fx:id="weatherLabel" text="-- °C" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                <Label fx:id="windLabel" text="Vânt: -- km/h"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.28" style="-fx-background-color:transparent; -fx-padding: 10;">
            <items>
                <VBox spacing="15" styleClass="card">
                    <Label text="Registru Clienți" styleClass="h2"/>
                    <TextField promptText="Caută client..." style="-fx-padding: 8;"/>
                    
                    <TableView fx:id="destTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colName" text="Nume" prefWidth="90"/>
                            <TableColumn fx:id="colAddress" text="Adresă Livrare" prefWidth="180"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                    
                    <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding:10; -fx-background-radius:5;">
                        <Label text="Configurare Pachet" style="-fx-font-weight:bold;"/>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Greutate (kg):"/>
                            <TextField fx:id="weightField" text="1.5" prefWidth="60"/>
                        </HBox>
                    </VBox>
                </VBox>

                <StackPane styleClass="card" style="-fx-padding: 5;">
                    <WebView fx:id="webView"/>
                </StackPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="20" styleClass="sidebar" alignment="CENTER_RIGHT">
            <padding><Insets top="15" right="30" bottom="15" left="30"/></padding>
            
            <VBox alignment="CENTER_LEFT">
                <Label text="Distanță Estimată" textFill="#bdc3c7" style="-fx-font-size:10;"/>
                <Label fx:id="distanceLabel" text="0.0 km" textFill="white" style="-fx-font-size:16; -fx-font-weight:bold;"/>
            </VBox>
            
            <Separator orientation="VERTICAL"/>
            
            <VBox alignment="CENTER_LEFT">
                <Label text="Cost Total" textFill="#bdc3c7" style="-fx-font-size:10;"/>
                <Label fx:id="costLabel" text="0.00 RON" textFill="#f1c40f" style="-fx-font-size:20; -fx-font-weight:bold;"/>
            </VBox>
            
            <Region prefWidth="30"/>
            
            <Button fx:id="confirmButton" text="LANSEAZĂ MISIUNEA" styleClass="button-success" disable="true" style="-fx-font-size:14; -fx-padding: 10 20;"/>
        </HBox>
    </bottom>
</BorderPane>